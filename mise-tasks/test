#!/usr/bin/env bash

#MISE description="Run plugin tests - install and execute tool"
set -euo pipefail

mise plugin link --force selene .
mise cache clear
mise install selene@latest

# Capture and display the output while also verifying it
output=$(mise exec "selene@0.29.0" -- "selene" --version)
echo "selene output: $output"

if echo "$output" | grep -q '0.29.0'; then
    echo "✓ Tests passed"
else
    echo "✗ Test failed: expected version selene@0.29.0"
    exit 1
fi
